<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <%= link_to gravatar_for(current_user, size: "50x50"), current_user %>
  
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: "50x50"), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

</div>