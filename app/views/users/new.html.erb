<% provide :title, "Signup" %>

<h1 class="center">Sign up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @user do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.label :name, "Name *" %>
			<%= f.text_field :name, class: "form-control", placeholder: "Name" %>

			<%= f.label :email, "Email *" %>
			<%= f.email_field :email, class: "form-control", placeholder: "Email" %>

			<%= f.label :password, "Password *" %>
			<%= f.password_field :password, class: "form-control", placeholder: "Password" %>

			<%= f.label :password_confirmation, "Confirmation *" %>
			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
			
			<!-- data: {disable_with: } to prevent double submit that can cause uniqure error in database -->

			<%= f.submit "Create new account", class: "btn btn-primary", data: {disable_with: "Creating new account ..."} %>
		<% end %>
	</div>
</div>