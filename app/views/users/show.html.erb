<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user, size: "50x50" %>
				<%= @user.name %>
			</h1>
			<%= render 'follow_form' %>
		</section>
		<section class="stats">
      <%= render 'shared/stats' %>
    </section>
	</aside>
	<div class="col-md-8">
		<% if @user.microposts.any? %>
				<h3>Microposts (<%= @user.microposts.size %>)</h3>
				<ol class="microposts">
					<%= render @microposts %>
				</ol>
		<% end %>
	</div>
</div>